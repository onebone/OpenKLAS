<animated-vector xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:aapt="http://schemas.android.com/aapt"
	android:drawable="@drawable/ic_search"
	tools:targetApi="lollipop">

	<target android:name="arc">
		<aapt:attr name="android:animation">
			<objectAnimator
				android:propertyName="pathData"
				android:duration="190"
				android:valueFrom="@string/path_search_arc"
				android:valueTo="@string/path_cancel_arc"
				android:valueType="pathType"
				android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
		</aapt:attr>
	</target>

	<target android:name="line1">
		<aapt:attr name="android:animation">
			<objectAnimator
				android:propertyName="pathData"
				android:duration="190"
				android:valueFrom="@string/path_search_line1"
				android:valueTo="@string/path_cancel_line1"
				android:valueType="pathType"
				android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
		</aapt:attr>
	</target>

	<target android:name="line2">
		<aapt:attr name="android:animation">
			<objectAnimator
				android:propertyName="pathData"
				android:duration="190"
				android:startOffset="190"
				android:valueFrom="@string/path_search_line2"
				android:valueTo="@string/path_cancel_line2"
				android:valueType="pathType"
				android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
		</aapt:attr>
	</target>

</animated-vector>
