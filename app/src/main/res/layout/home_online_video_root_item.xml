<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<import type="android.view.View" />

		<variable
			name="viewModel"
			type="org.openklas.ui.home.HomeViewModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="14dp"
		android:background="@color/white">

		<ImageView
			android:id="@+id/img_icon"
			android:layout_width="18dp"
			android:layout_height="18dp"
			app:layout_constraintTop_toTopOf="@id/label_online_video"
			app:layout_constraintBottom_toBottomOf="@id/label_online_video"
			app:layout_constraintLeft_toLeftOf="parent"
			app:srcCompat="@drawable/ic_tear"
			app:tint="@{viewModel.impendingVideoCount > 0 ? @color/red : @color/green}"
			tools:tint="@color/green"
			android:contentDescription="@string/common_home_online_video_icon" />

		<TextView
			android:id="@+id/label_online_video"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toRightOf="@id/img_icon"
			android:layout_marginStart="8dp"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="@{viewModel.impendingVideoCount > 0 ? @color/red : @color/green}"
			tools:textColor="@color/green"
			android:text="@string/home_online_video_title" />

		<TextView
			android:id="@+id/tv_show_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="@id/label_online_video"
			app:layout_constraintBottom_toBottomOf="@id/label_online_video"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginEnd="4dp"
			android:padding="4dp"
			android:text="@{@string/home_online_video_show_more(viewModel.videoCount)}"
			tools:text="남은 과제 5"
			android:textSize="14sp"
			android:textColor="@color/blue"
			app:drawableEndCompat="@drawable/ic_arrow"
			app:drawableTint="@color/blue"
			android:background="@drawable/background_hover_light_blue"
			android:clickable="true"
			android:focusable="true"
			android:drawablePadding="4dp" />

		<androidx.constraintlayout.widget.Barrier
			android:id="@+id/barrier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:barrierMargin="4dp"
			app:barrierDirection="bottom"
			app:constraint_referenced_ids="label_online_video,img_icon" />

		<TextView
			android:id="@+id/label_due"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/barrier"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginTop="8dp"
			app:drawableLeftCompat="@drawable/ic_caution"
			android:drawablePadding="4dp"
			android:textColor="@color/red"
			android:text="@{@string/home_due_in_24hours(viewModel.impendingVideoCount)}"
			android:visibility="@{viewModel.impendingVideoCount > 0 ? View.VISIBLE : View.GONE}"
			tools:text="24시간 안에 마감 2" />

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rv_videos"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/label_due"
			app:items="@{viewModel.impendingVideo}"
			android:layout_marginTop="12dp" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="80dp"
			android:gravity="center"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/barrier"
			android:text="@string/home_no_video"
			android:visibility="@{viewModel.impendingVideoCount > 0 ? View.GONE : View.VISIBLE}"
			android:textColor="@color/gray" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
