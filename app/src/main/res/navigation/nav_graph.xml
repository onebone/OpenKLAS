<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/fragment_login">

	<action
		android:id="@+id/action_global_login"
		app:destination="@id/fragment_login"
		app:enterAnim="@anim/slide_right"
		app:exitAnim="@anim/slightly_scale_down_left"
		app:popUpTo="@id/nav_graph"
		app:popUpToInclusive="true" />

	<fragment
		android:id="@+id/fragment_login"
		android:name="org.openklas.ui.login.LoginFragment"
		tools:layout="@layout/login_fragment">

		<action
			android:id="@+id/action_login_home"
			app:destination="@id/fragment_home"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popUpTo="@id/fragment_login"
			app:popUpToInclusive="true" />

	</fragment>

	<fragment
		android:id="@+id/fragment_timetable"
		android:name="org.openklas.ui.home.TimetableFragment"
		tools:layout="@layout/timetable_fragment">

	</fragment>

	<fragment
		android:id="@+id/fragment_home"
		android:name="org.openklas.ui.home.HomeFragment"
		tools:layout="@layout/home_fragment">

		<action
			android:id="@+id/action_home_timetable"
			app:destination="@id/fragment_timetable"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popEnterAnim="@anim/slightly_scale_up_left"
			app:popExitAnim="@anim/slide_right_pop" />

		<action
			android:id="@+id/action_home_post_list"
			app:destination="@id/fragment_post_list"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popEnterAnim="@anim/slightly_scale_up_left"
			app:popExitAnim="@anim/slide_right_pop">

			<argument
				android:name="semester"
				app:argType="string"
				app:nullable="true" />

			<argument
				android:name="type"
				app:argType=".klas.model.PostType"
				app:nullable="false" />

		</action>

		<action
			android:id="@+id/action_home_sylsearch"
			app:destination="@id/fragment_syllabus_search"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popEnterAnim="@anim/slightly_scale_up_left"
			app:popExitAnim="@anim/slide_right_pop" />

		<action
			android:id="@+id/action_home_assignment_list"
			app:destination="@id/fragment_assignment_list"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popEnterAnim="@anim/slightly_scale_up_left"
			app:popExitAnim="@anim/slide_right_pop">

			<argument
				android:name="semester"
				app:argType="string"
				app:nullable="true" />

			<argument
				android:name="subject"
				app:argType="string"
				app:nullable="true" />

		</action>

	</fragment>

	<fragment
		android:id="@+id/fragment_post_list"
		android:name="org.openklas.ui.postlist.PostListFragment"
		tools:layout="@layout/post_list_fragment">

		<argument
			android:name="semester"
			app:argType="string"
			app:nullable="true" />

		<argument
			android:name="type"
			app:argType=".klas.model.PostType"
			app:nullable="false" />

		<action
			android:id="@+id/action_postls_post"
			app:destination="@id/fragment_post"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popEnterAnim="@anim/slightly_scale_up_left"
			app:popExitAnim="@anim/slide_right_pop">

			<argument
				android:name="postType"
				app:nullable="false"
				app:argType=".klas.model.PostType" />

			<argument
				android:name="boardNo"
				app:nullable="false"
				app:argType="integer" />

			<argument
				android:name="masterNo"
				app:nullable="false"
				app:argType="integer" />

			<argument
				android:name="semester"
				app:nullable="false"
				app:argType="string" />

			<argument
				android:name="subject"
				app:nullable="false"
				app:argType="string" />

		</action>

	</fragment>

	<fragment
		android:id="@+id/fragment_syllabus_search"
		android:name="org.openklas.ui.sylsearch.SylSearchFragment"
		tools:layout="@layout/syllabus_search_fragment">

		<action
			android:id="@+id/action_sylsearch_syllabus"
			app:destination="@id/fragment_syllabus"
			app:enterAnim="@anim/slide_right"
			app:exitAnim="@anim/slightly_scale_down_left"
			app:popEnterAnim="@anim/slightly_scale_up_left"
			app:popExitAnim="@anim/slide_right_pop">

			<argument
				android:name="subject"
				app:nullable="false"
				app:argType="string" />

		</action>

	</fragment>

	<fragment
		android:id="@+id/fragment_syllabus"
		android:name="org.openklas.ui.syllabus.SyllabusFragment"
		tools:layout="@layout/syllabus_fragment">

		<argument
			android:name="subject"
			app:nullable="false"
			app:argType="string" />

	</fragment>

	<fragment android:id="@+id/fragment_post"
		android:name="org.openklas.ui.post.PostFragment"
		tools:layout="@layout/post_fragment">

		<argument
			android:name="postType"
			app:nullable="false"
			app:argType=".klas.model.PostType" />

		<argument
			android:name="boardNo"
			app:nullable="false"
			app:argType="integer" />

		<argument
			android:name="masterNo"
			app:nullable="false"
			app:argType="integer" />

		<argument
			android:name="semester"
			app:nullable="false"
			app:argType="string" />

		<argument
			android:name="subject"
			app:nullable="false"
			app:argType="string" />

	</fragment>

	<fragment
		android:id="@+id/fragment_assignment_list"
		android:name="org.openklas.ui.assignmentlist.AssignmentListFragment">

		<argument
			android:name="semester"
			app:nullable="true"
			app:argType="string" />

		<argument
			android:name="subject"
			app:nullable="true"
			app:argType="string" />

	</fragment>

</navigation>
