<resources>
    <declare-styleable name="TitleView">
        <attr name="titleName" format="string"/>

        <attr name="titleMode" format="integer">
            <enum name="none" value="0" />
            <enum name="back" value="1" />
            <enum name="mypage" value="2" />
            <enum name="backsearch" value="3" />
            <enum name="mypagesearch" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TimetableView">
        <attr name="cellMinHeight" format="dimension" />
        <attr name="minPeriods" format="integer" />
    </declare-styleable>

    <declare-styleable name="BackdropContainerView">
        <attr name="expandInitially" format="boolean" />
    </declare-styleable>

    <attr name="icon_state_back" format="boolean" />
    <attr name="icon_state_cancel" format="boolean" />
    <attr name="icon_state_hidden" format="boolean" />
</resources>
